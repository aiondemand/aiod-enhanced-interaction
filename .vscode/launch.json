{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Python file for Semantic search experiments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}/experiments/semantic_search",
            "env": {
                "PYTHONPATH": "${cwd}/experiments/semantic_search/src"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug FastAPI service",
            "type": "debugpy",
            "request": "launch",
            "program":"${workspaceFolder}/app/main.py",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${cwd}"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug Celery Search Worker",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "args": ["-A", "app.celery_app", "worker", "--loglevel=info", "-Q", "search", "-c", "1", "-P", "solo", "-n", "search_worker@%h"],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${cwd}"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug Celery Maintenance Worker",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "args": ["-A", "app.celery_app", "worker", "--loglevel=info", "-Q", "maintenance", "-c", "1", "-P", "solo", "-n", "maintenance_worker@%h"],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${cwd}"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug arbitrary Python file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
