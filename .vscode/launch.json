{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Python file when experimenting with semantic search",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}/experiments/semantic_search",
            "env": {
                "PYTHONPATH": "${cwd}/experiments/semantic_search/src"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug FastAPI service",
            "type": "debugpy",
            "request": "launch",
            "program":"${workspaceFolder}/app/main.py",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${cwd}"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug arbitrary Python file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
