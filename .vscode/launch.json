    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Python file for prototyping",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "env": {
                "PYTHONPATH": "${cwd}/src"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug FastAPI service",
            "type": "debugpy",
            "request": "launch",
            "program":"${workspaceFolder}/api/app/main.py",
            "cwd": "${workspaceFolder}/api",
            "env": {
                "PYTHONPATH": "${cwd}/api"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug Python file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}